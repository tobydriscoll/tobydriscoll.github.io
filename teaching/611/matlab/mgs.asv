function [Q,R] = mgs(A)

[m,n] = size(A);

Q = zeros(m,n);
R = zeros(n,n);
V(:,:,1) = A;
for j = 1:n
    for i = 1:j-1
        R(i,j) = Q(:,i)'*V(:,j,i);
        V(:,j) = V(:,j) - Q(:,i)*R(i,j);
    end
    R(j,j) = norm(V(:,j));
    Q(:,j) = V(:,j) / R(j,j);
end

for i = 1:n
    for j = i+1:n
        R(i,j) = Q(:,i)'*A(:,j);
        V(:,j) = V(:,j) - Q(:,i)*R(i,j);
        R(j,j) = norm(V(:,j));
        Q(:,j) = V(:,j) / R(j,j);
    end
end